<h1>
  Transformations
</h1>

<h2>Optimization</h2>

<h3>Crop Dog</h3>
<!-- cropping takes a chunk out of an image -->
<%= render 'image_box',
  :public_id => 'dog',
  :format => 'jpg',
  :description => 'dog Width 300, Height 200,Crop crop',
  :options => { :width => 300, :height => 200, :crop => "crop" }
%>
<h3>Thumb Dog with Gravity</h3>
<!-- use gravity with thumb to get focus on someting interesting or a compass point -->
<%= render 'image_box',
  :public_id => 'dog',
  :format => 'jpg',
  :description => 'dog Width 300, Height 200,Crop thumb, Gravity auto',
  :options => { :width => 300, :height => 200, :crop => "thumb", :gravity => "auto" }
%>

<h3>Thumb Face with Gravity</h3>
<%= render 'image_box',
  :public_id => 'face',
  :format => 'jpeg',
  :description => 'face Width 300, Height 200,Crop thumb, Gravity face',
  :options => { :width => 300, :height => 200, :crop => "thumb", :gravity => "face" }
%>
<h3>Thumb Faces with Gravity</h3>
<%= render 'image_box',
