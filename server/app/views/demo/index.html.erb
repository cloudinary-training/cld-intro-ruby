<h3>Overlay</h3>

<!-- overlays are chained transformations so you need an array -->
<h4>Image over Image</h4>
<%= render 'image_box',
  :public_id => 'face',
  :format => '',
  :description => 'faces Height 300, Width 300, Crop thumb,  logo overlay ',
  :options => { :transformation=>[
    {:width => 300, :height => 300, :crop => "thumb",:gravity=>"auto"},
    {:overlay=>"logo", :width=>100, :height=>100, :crop=>"thumb",gravity:"south_east"}
  ]
  }
%>

<h4>Text over Image</h4>
<%= render 'image_box',
  :public_id => 'faces',
  :format => '',
  :description => 'facess Height 300, Width 300, Crop thumb,  text overlay ',
  :options => { :transformation=>[
    {:width => 300, :height => 300, :crop => "thumb"},
    {:overlay=>{:font_family=>"Arial", :font_size=>30, :text=>"Tutoring"}, 
    :background=>"white", :color=>"red", :gravity=>"north_west", :y=>10, :x=>10}
  ]
  }
%>

