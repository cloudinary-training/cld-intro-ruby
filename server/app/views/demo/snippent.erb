

<% options_with_format = options.merge(:format => 'jpg') %>
  <%= cl_image_tag(public_id, options_with_format) %>
  <div class="link">
    <% link_url = cloudinary_url(public_id, options_with_format) %>
    <%= link_to(link_url, link_url, :target => '_blank') %>
  </div>

 <%= image_tag(url) %>
  <div class="link">
    <%= link_to(url, url, :target => '_blank') %>
  </div>

  <div class="caption">
    <%= description %>
  </div>

  <div class="public_id">
  Image Public ID:
  <%= public_id %>
</div>

  
